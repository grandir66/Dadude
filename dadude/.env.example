# DaDude v2.0 Configuration
# PostgreSQL + Redis Edition
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ===========================================
# DUDE SERVER CONNECTION
# ===========================================
DUDE_HOST=192.168.30.250
DUDE_API_PORT=8728
DUDE_USE_SSL=false
DUDE_USERNAME=admin
DUDE_PASSWORD=YOUR_PASSWORD_HERE

# ===========================================
# DATABASE - PostgreSQL
# ===========================================
POSTGRES_USER=dadude
POSTGRES_PASSWORD=dadude_secret
POSTGRES_DB=dadude
POSTGRES_PORT=5432

# ===========================================
# CACHE - Redis
# ===========================================
REDIS_PORT=6379

# ===========================================
# DADUDE SERVER
# ===========================================
DADUDE_PORT=8000
FRONTEND_PORT=80
DADUDE_HOST=0.0.0.0
DADUDE_API_KEY=

# ===========================================
# POLLING & SYNC
# ===========================================
POLL_INTERVAL=60
FULL_SYNC_INTERVAL=300
CONNECTION_TIMEOUT=30

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# WEBHOOK (optional)
# ===========================================
WEBHOOK_URL=
WEBHOOK_SECRET=

# ===========================================
# ENCRYPTION
# ===========================================
ENCRYPTION_KEY=

# ===========================================
# DNS
# ===========================================
DNS_PRIMARY=8.8.8.8
DNS_SECONDARY=8.8.4.4
