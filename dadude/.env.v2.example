# DaDude v2.0 Configuration
# Copy this file to .env and configure values
# PostgreSQL + Redis Edition

# ===========================================
# DATABASE - PostgreSQL
# ===========================================

# PostgreSQL credentials
POSTGRES_USER=dadude
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=dadude
POSTGRES_PORT=5432

# Connection URL (auto-generated from above, but can be overridden)
# DATABASE_URL=postgresql+asyncpg://dadude:password@localhost:5432/dadude

# ===========================================
# CACHE - Redis
# ===========================================

REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# DUDE SERVER CONNECTION
# ===========================================

# IP or hostname of Dude Server (RouterOS/CHR)
DUDE_HOST=192.168.1.1

# RouterOS API port (8728 plaintext, 8729 SSL)
DUDE_API_PORT=8728

# Use SSL for API connection
DUDE_USE_SSL=false

# RouterOS credentials
DUDE_USERNAME=admin
DUDE_PASSWORD=your_password

# ===========================================
# DADUDE SERVER
# ===========================================

# Backend API port
DADUDE_PORT=8000

# Frontend port (nginx)
FRONTEND_PORT=80

# Host binding (0.0.0.0 for external access)
DADUDE_HOST=0.0.0.0

# Secret key for API authentication
DADUDE_API_KEY=your_secret_api_key_here

# ===========================================
# POLLING & SYNC
# ===========================================

# Device polling interval (seconds)
POLL_INTERVAL=60

# Full sync interval (seconds)
FULL_SYNC_INTERVAL=300

# Connection timeout (seconds)
CONNECTION_TIMEOUT=30

# ===========================================
# LOGGING
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# WEBHOOK (optional)
# ===========================================

# External webhook URL for notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# ===========================================
# ENCRYPTION
# ===========================================

# Master key for credential encryption (optional)
# If not specified, will be auto-generated
# IMPORTANT: Save this key to decrypt data!
ENCRYPTION_KEY=

# ===========================================
# DNS (for container networking)
# ===========================================

DNS_PRIMARY=8.8.8.8
DNS_SECONDARY=8.8.4.4

# ===========================================
# DEV TOOLS (optional)
# ===========================================

# Adminer (database UI)
ADMINER_PORT=8080

# Redis Commander (redis UI)
REDIS_COMMANDER_PORT=8081

# ===========================================
# GITHUB (optional)
# ===========================================

# GitHub token for creating releases
GITHUB_TOKEN=
